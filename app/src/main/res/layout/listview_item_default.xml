<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/round_corner_layout_bg"
                android:descendantFocusability="blocksDescendants"
                android:padding="7dp"
                android:layout_marginBottom="5dp">

    <TextView
        android:id="@+id/cNameTextView"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Contact Name"
        android:textColor="@color/black"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <TextView
        android:id="@+id/cTitleTextView"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cPhoneTextView"
        android:layout_gravity="right"
        android:gravity="right"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/cNameTextView"
        android:layout_toEndOf="@+id/cNameTextView"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/cPhoneTextView"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cNameTextView"
        android:text="Phone"
        android:textColor="@color/black"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <TextView
        android:id="@+id/cEmailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cPhoneTextView"
        android:text="Email"
        android:textColor="@color/black"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

</RelativeLayout>