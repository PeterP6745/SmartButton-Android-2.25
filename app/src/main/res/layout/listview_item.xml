<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/round_corner_layout_bg"
                android:descendantFocusability="blocksDescendants"
                android:padding="7dp">

    <TextView
        android:id="@+id/cNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Name"
        android:textColor="@color/black"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <Button
        android:id="@+id/delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignBaseline="@+id/cPhoneTextView"
        android:layout_alignBottom="@+id/cPhoneTextView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:background="@drawable/yellow_button"
        android:text="Delete"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/cPhoneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cNameTextView"
        android:text="Phone"
        android:textColor="@color/black"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <TextView
        android:id="@+id/cEmailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cPhoneTextView"
        android:text="Email"
        android:textColor="@color/black"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

</RelativeLayout>