<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#c0c0c0"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/members_fname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="@string/first_name" />

    <TextView
        android:id="@+id/members_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/members_fname"
        android:layout_alignStart="@+id/members_fname"
        android:layout_alignLeft="@+id/members_fname"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:text="@string/email_name"
        android:textAlignment="viewStart" />

</RelativeLayout>