<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="150dip"/>
            <stroke android:width="1dip" android:color="@color/yellow_light"/>
            <gradient android:angle="-90" android:startColor="@color/yellow_light" android:endColor="@color/yellow_light"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="150dip"/>
            <stroke android:width="1dip" android:color="@color/yellow_light"/>
            <solid android:color="@color/yellow_light"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="150dip"/>
            <stroke android:width="1dip" android:color="@color/yellow_light"/>
            <gradient android:angle="-90" android:startColor="@color/yellow_light" android:endColor="@color/yellow_light"/>
        </shape>
    </item>
</selector>
